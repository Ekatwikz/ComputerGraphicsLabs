<Window x:Class="WPFFilters.SavePresetWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFFilters"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="80" MinWidth="240"
        Title="SavePresetWindow" Height="100" Width="320">
    <DockPanel>
        <TextBlock Text="Save Preset with Name:" DockPanel.Dock="Top"/>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBox Name="PresetNameBox" Grid.Column="0"/>
            <Button Click="OkButton_Click" Content="Ok" Grid.Column="1" />
        </Grid>
    </DockPanel>
</Window>
